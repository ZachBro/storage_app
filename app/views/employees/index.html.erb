<div class="text-center">
  <h1 class="headings">Employees</h1>
</div>
<% if logged_in? %>
  <div class="text-center">
    <a href="/employees/new" class="btn btn-secondary btn-lg">New</a>
  </div><br>
<% end %>
<div class="form-container">
  <table class="table table-striped table-dark table-sm">
    <thead>
      <tr>
        <th>ID number</th>
        <th>Name</th>
      </tr>
      <tbody>
        <% @employees.each do |e| %>
          <tr>
            <td><a href="/employees/<%= e.id %>"><%= e.id_number %></a></td>
            <td><%= e.name %></td>
          </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</div>
