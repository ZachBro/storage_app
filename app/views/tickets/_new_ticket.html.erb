<%= flash[:danger]%>

<div class="container">
  <%= form_tag("/tickets", method: :get) do %>
  <%= label_tag(:ticket_number, "Ticket number") %><br>
  <div class="input-group">
    <%= text_field_tag(:ticket_number, "", :class => "form-control") %>
    <div class="input-group-append">
      <%= submit_tag("Submit", name: nil, :class => "btn btn-secondary") %>
    </div>
  </div>
<% end %>
<br>
<a class="btn btn-secondary btn-lg" href="/">Back</a>
</div>
