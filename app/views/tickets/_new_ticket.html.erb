<div class="form-container">
  <%= form_tag("/tickets", :autofocus => :on, :autocomplete => "off", method: :get) do %>
  <div class="input-group">
    <div class="input-group-prepend">
      <%= label_tag(:ticket_number, "Ticket number", :class => "input-group-text search-form-addon") %><br>
    </div>
    <%= text_field_tag(:ticket_number, "", :class => "form-control", :autofocus => true) %>
    <div class="input-group-append">
      <%= submit_tag("Submit", name: nil, :class => "btn btn-secondary") %>
    </div>
  </div>
  <% end %>
</div><br>
