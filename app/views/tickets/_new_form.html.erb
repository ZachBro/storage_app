<div class="container">
  <% if @ticket.number.nil? %>
    <% @ticket.number = params[:number] %>
  <% end %>
  <div class="text-center">
    <h1><%= @ticket.number %> </h1>
  </div>
  <br>
  <%= f.hidden_field :number %>

  <div class="form-container">
    <%= render 'shared/error_messages' %>

    <div class="input-group">
      <div class="input-group-prepend">
        <%= f.label :name, :class => "input-group-text input-group-addon" %>
      </div>
      <%= f.text_field :name, :class => "form-control", :autofocus => true %>
    </div>

    <%= f.fields_for :details do |d| %>
      <div class="input-group">
        <div class="input-group-prepend">
          <%= d.label :amount, :class => "input-group-text input-group-addon" %>
        </div>
        <%= d.text_field :amount, :class => "form-control" %>
      </div>
      <div class="input-group">
        <div class="input-group-prepend">
          <%= d.label :location, :class => "input-group-text input-group-addon" %>
        </div>
        <%= d.text_field :location, :class => "form-control" %>
      </div>
      <div class="input-group">
        <div class="input-group-prepend">
          <%= d.label :room, :class => "input-group-text input-group-addon" %>
        </div>
        <%= d.text_field :room, :class => "form-control" %>
      </div>
      <div class="input-group">
        <div class="input-group-prepend">
          <%= d.label :s_employee_id, "Employee", :class => "input-group-text input-group-addon" %>
        </div>
        <%= d.text_field :s_employee_id, :class => "form-control" %>
      </div>
      <%= d.label :aasm_state, 'ST', :value => 'ST' %>
      <%= d.radio_button :aasm_state, :ST %>
      <%= d.label :aasm_state, 'RNR', :value => 'RNR' %>
      <%= d.radio_button :aasm_state, :RNR %>
      <%= d.label :aasm_state, 'LT', :value => 'LT' %>
      <%= d.radio_button :aasm_state, :LT %>
    <% end %>
    <br>
    <div class="text-center">
      <%= f.submit "Submit ticket", :class => "btn btn-secondary" %>
    </div>
  </div>
  <br>
  <div class="text-center">
    <a class="btn btn-secondary btn-lg" href="/">Home</a>
  </div>
</div>
