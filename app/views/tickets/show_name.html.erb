<div class="text-center">
  <h1 class="headings">
    <strong>
      <%= @ticket.number %>
    </strong>
  </h1>
</div><br>
<div class="form-container">
  <%= render 'shared/error_messages' %>
  <%= form_for @ticket, :url => {:action => 'edit_name'} do |f| %>
    <div class="input-group">
      <%= f.text_field :name, :value => @ticket.name, :autocomplete => "off", :class => "form-control" %>
      <div class="input-group-append">
        <%= f.submit "Edit name", :class => "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div><br>
<div class="text-center">
  <%= link_to("Back", {:action => 'show', :id => @ticket.id}, :class => "btn btn-lg btn-secondary") %>
</div>
