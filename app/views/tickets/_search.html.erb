<th scope="row" class="align-middle"><%= ticket.latest_details.aasm_state %></th>
<td class="align-middle"><a href="/tickets/<%= ticket.id %>"><%= ticket.number %></a></td>
<td class="align-middle"><%= ticket.name %></td>
<td class="align-middle"><%= ticket.latest_details.amount %></td>
<td class="align-middle"><%= ticket.latest_details.location %></td>
<td class="align-middle"><%= ticket.latest_details.room %></td>
<td class="align-middle"><%= ticket.latest_details.comment %></td>
<td class="align-middle"><%= ticket.latest_details.stored_employee.id_number %>
  - <%= ticket.latest_details.stored_employee.name %>
  @ <%= ticket.latest_details.created_at.in_time_zone("Melbourne").strftime('%H:%M - %d/%m/%y') %></td>
<% if ticket.latest_details.retrieved_employee %>
  <td class="align-middle"><%= ticket.latest_details.retrieved_employee.id_number %>
   - <%= ticket.latest_details.retrieved_employee.name %>
   @ <%= ticket.latest_details.updated_at.in_time_zone("Melbourne").strftime('%H:%M - %d/%m/%y') %></td>
<% else %>
<td class="align-middle">
  <% if ticket.details.first.aasm_state == "RNR" %>
    <%= form_for ticket do |f| %>
      <%= f.fields_for :details, f.object.latest_details do |d| %>
        <%= d.hidden_field :updated_at, value: Time.now %>
        <div class="input-group input-group-sm">
          <%= d.text_field :room, :autocomplete => "off", :class => "form-control sign-out-room" %>
          <%= d.text_field :r_employee_id, :autocomplete => "off", :class => "form-control" %>
          <div class="input-group-append">
            <%= f.submit "Sign out", :class => "btn btn-outline-secondary btn-sm" %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <%= form_for ticket do |f| %>
      <%= f.fields_for :details, f.object.latest_details do |d| %>
        <%= d.hidden_field :updated_at, value: Time.now %>
        <div class="input-group input-group-sm">
          <%= d.text_field :r_employee_id, :autocomplete => "off", :class => "form-control" %>
      <% end %>
      <div class="input-group-append">
        <%= f.submit "Sign out", :class => "btn btn-outline-secondary btn-sm" %>
      </div>
    </div>
    <% end %>
  <% end %>
  </td>
<% end %>
