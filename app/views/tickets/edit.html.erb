<p>
  <%= form_for @new_detail do |d| %>
    <p>
      <%= d.label :amount %> <br>
      <%= d.text_field :amount %>
    </p>

    <p>
      <%= d.label :location %> <br>
      <%= d.text_field :location %>
    </p>

    <p>
      <%= d.label :room %> <br>
      <%= d.text_field :room %>
    </p>

    <p>
      <%= d.label :s_employee_id, "Stored employee" %> <br>
      <%= d.text_field :s_employee_id %>
    </p>

    <p>
      <%= d.label :retrieved_employee_id %> <br>
      <%= d.text_field :retrieved_employee_id %>
    </p>
    <%= d.submit %>
  <% end %>

</p>
