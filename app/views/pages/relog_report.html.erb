<div class="text-center">
  <div class="row">
    <% @array_of_tickets.each do |tickets| %>
      <div class="col">
    <table class="table table-striped table-dark table-sm">
      <thead>
        <tr>
          <th style="width: 8%">Type</th>
          <th style="width: 15%">Number</th>
          <th style="width: 47%">Name</th>
          <th style="width: 10%">Amount</th>
          <th style="width: 20%">Location</th>
        </tr>
      </thead>
      <tbody>
        <% tickets.each do |ticket| %>
          <tr>
            <th scope="row" class="align-middle"><%= ticket.latest_details.aasm_state %></th>
            <td class="align-middle"><a href="/tickets/<%= ticket.id %>"><%= ticket.number %></a></td>
            <td class="align-middle"><%= ticket.name %></td>
            <td class="align-middle"><%= ticket.latest_details.amount %></td>
            <td class="align-middle"><%= ticket.latest_details.location %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% end %>
</div>
</div>
