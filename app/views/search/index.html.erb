<div class="container">
  <div class="text-center">
    <h1>Search</h1>
  </div>
  <div class="form-container">
    <%= form_tag("/search", method: :get) do %>
      <div class="input-group">
        <div class="input-group-prepend">
          <%= label_tag(:name, "Guest name", :class => "input-group-text search-form-addon") %>
        </div>
        <%= text_field_tag(:name, params[:name], :class => "form-control") %>
      </div>
      <div class="input-group">
        <div class="input-group-prepend">
          <%= label_tag(:room, "Room number", :class => "input-group-text search-form-addon") %>
        </div>
        <%= text_field_tag(:room, params[:room], :class => "form-control") %>
      </div>
      <div class="input-group">
        <div class="input-group-prepend">
          <%= label_tag(:date_start, "Created between", :class => "input-group-text search-form-addon") %>
        </div>
        <%= date_select(:ds, :ds, { :order => [:day, :month, :year], :start_year => 2018, :end_year => Date.current.year, :use_month_numbers => true }, :class => "form-control") %>
        - <%= date_select(:de, :de, { :order => [:day, :month, :year], :start_year => 2018, :end_year => Date.current.year, :use_month_numbers => true }, :class => "form-control") %>
      </div>
        <div class="input-group-append">
          <%= submit_tag("Search", name: nil, :class => "btn btn-secondary") %>
        </div>
      </div>
    <% end %><br>

